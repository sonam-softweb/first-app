<%#= render :partial => "login_logout" %>

<center>
<B><Font Size=5>Pending Borrower Payments</Font></B>
<BR><BR>

<TABLE Border=1>
<TR>
<TD>
<U><B>Process?</B></U>
</TD>
<TD>
<U>Due Date</U>
</TD>
<TD>
<U>Borrower_ID</U>
</TD>
<TD>
<U>Due Amount</U>
</TD>
</TR>

<% if @pending_borrower_payments.blank? %>
	<TR>
	<TD Colspan=4>
	No Pending Borrower Payments At This Time.
	</TD>
	</TR>
<% else %>
	<% form_tag("", :method=>'post') do %>
		<% @pending_borrower_payments.each do |x| %>
			<TR>
			<TD>
			<%= check_box_tag "due_borrower_payments[]", x.id %>
			</TD>
			<TD>
			<%#= link_to x.first_name + " " + x.last_name, { :action => 'edit_lender_application', :id => x.id } %>
			<%= x.due_date %>
			</TD>
			<TD>
			<%#= link_to x.email, { :action => 'edit_lender_application', :id => x.id } %>
			<%= x.borrower_id %>
			</TD>
			<TD>
			<%#= link_to x.phone, { :action => 'edit_lender_application', :id => x.id } %>
			<%= x.due_amount %>
			</TD>
			</TR>
		
		<% end %>
	<TR>
	<TD Colspan=4 align=center>
	<BR>
	<%= submit_tag "  *** SUBMIT ***   " %>
	</TD>
	</TR>
	<% end %>

<% end %>
</TABLE>
<BR><BR>
<%= link_to "Main Menu", :controller => "manage", :action => "index" %><BR>
<%#= Time.now.strftime("%D %I:%M:%S %p")%>
<%= Time.now.strftime("%m/%d/%Y")%>&nbsp;&nbsp;<%= Time.now.strftime("%I:%M%p")%>
</center>