<%#= render :partial => "login_logout" %>

<center>
<B><Font Size=5>Fully Subscribed Borrowers</Font></B>
<BR><BR>

<TABLE Border=1>
<TR>
<TD>
<U>Status</U>
</TD>
<TD>
<U>Headline</U>
</TD>
<TD>
<U>Contact Name</U>
</TD>
<TD>
<U>System Size (kW)</U>
</TD>
<TD>
<U>System Price ($)</U>
</TD>
<TD>
<U>Bids ($)</U>
</TD>
<TD>
<U>Still Needed ($)</U>
</TD>
<TD>
<U>EMail</U>
</TD>
<TD>
<U>Phone</U>
</TD>
</TR>

<% @borrowers.each do |x| %>
	<TR Align=Left>
	<TD>
		<%if x.status == "Displayed"%>
			<B><%=x.status%></B>
		<%else%>
			<%=x.status%>
		<% end %>
	</TD>
	<TD>
	<%= link_to x.headline, { :action => 'edit_fully_subscribed', :id => x.id } %>
	</TD>
	<TD>
	<%= link_to x.first_name + " " + x.last_name, { :action => 'edit_fully_subscribed', :id => x.id } %>
	</TD>
	<TD Align=Right>
	<%= link_to x.system_size, { :action => 'edit_fully_subscribed', :id => x.id } %>
	</TD>
	<TD Align=Right>
	<%= link_to x.system_price, { :action => 'edit_fully_subscribed', :id => x.id } %>
	</TD>
	<TD Align=Right>
	<%= link_to (x.bids.sum("amount") || 0), { :action => 'edit_fully_subscribed', :id => x.id } %>
	</TD>
	<TD Align=Right>
	<%= link_to (x.system_price.to_i - x.bids.sum("amount").to_i), { :action => 'edit_fully_subscribed', :id => x.id } %>
	</TD>
	<TD>
	<%= link_to x.email, { :action => 'edit_fully_subscribed', :id => x.id } %>
	</TD>
	<TD>
	<%= link_to x.phone, { :action => 'edit_fully_subscribed', :id => x.id } %>
	</TD>

	</TR>
<% end %>
</TABLE>
<BR><BR>
<%= link_to "Main Menu", :controller => "manage", :action => "index" %><BR>
<%#= Time.now.strftime("%D %I:%M:%S %p")%>
<%= Time.now.strftime("%m/%d/%Y")%>&nbsp;&nbsp;<%= Time.now.strftime("%I:%M%p")%>
</center>