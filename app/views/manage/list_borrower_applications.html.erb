<%#= render :partial => "login_logout" %>

<center>
<B><Font Size=5>Borrower Applications</Font></B>
<BR><BR>

<TABLE Border=1>
<TR>
<TD>
<U>Status</U>
</TD>
<TD>
<U>Headline</U>
</TD>
<TD>
<U>Contact Name</U>
</TD>
<TD>
<U>Installer</U>
</TD>
<TD>
<U>EMail</U>
</TD>
<TD>
<U>Phone</U>
</TD>
<TD>
<U>Notes</U>
</TD>
</TR>

<% @borrower_applications.each do |x| %>
	<TR Align=Left>
	<TD>
	<%= link_to x.status, { :action => 'edit_borrower_application', :id => x.id } %>
	</TD>
	<TD>
	<%= link_to x.headline, { :action => 'edit_borrower_application', :id => x.id } %>
	</TD>
	<TD>
	<%= link_to x.first_name + " " + x.last_name, { :action => 'edit_borrower_application', :id => x.id } %>
	</TD>
	<TD>
	<%= link_to Installer.find(x.installer_id).company_name, { :action => 'edit_borrower_application', :id => x.id } %>
	</TD>
	<TD>
	<%= link_to x.email, { :action => 'edit_borrower_application', :id => x.id } %>
	</TD>
	<TD>
	<%= link_to x.phone, { :action => 'edit_borrower_application', :id => x.id } %>
	</TD>
	<TD>
	<%if !x.our_notes.blank?%><%=link_to x.our_notes, { :action => 'edit_borrower_application', :id => x.id }%><%end%>
	</TD>
	</TR>
<% end %>
</TABLE>
<BR><BR>
<%= link_to "Main Menu", :controller => "manage", :action => "index" %><BR>
<%#= Time.now.strftime("%D %I:%M:%S %p")%>
<%= Time.now.strftime("%m/%d/%Y")%>&nbsp;&nbsp;<%= Time.now.strftime("%I:%M%p")%>
</center>