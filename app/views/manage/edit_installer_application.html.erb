<%#= render :partial => "login_logout" %>

<center>
<B><Font Size=4>Edit Installer Application</Font></B>
<BR><BR>

<Font Size=2><%= link_to "Approve This Installer Application", { :controller => "manage", :action => "approve_installer_application", :id => @installer_application.id }, :confirm => "Are you sure you want to approve this installer application?"%></Font>
<BR><BR>
<%= error_messages_for 'installer' %>
<TABLE>
<% form_for :installer_application do |a| %>
	<Table Border=0>
	<TR>
	<TD Align=right>
	Company Name:
	</TD>
	<TD Align=left>
	<%= a.text_field :company_name %>
	</TD>
	</TR>

	<TR>
	<TD Align=right>
	First Name:
	</TD>
	<TD Align=left>
	<%= a.text_field :first_name %>
	</TD>
	</TR>
	
	<TR>
	<TD Align=right>
	Last Name:
	</TD>
	<TD Align=left>
	<%= a.text_field :last_name %>
	</TD>
	</TR>

	<TR>
	<TD Align=right>
	E-Mail Address:
	</TD>
	<TD Align=left>
	<%= a.text_field :email %>
	</TD>
	</TR>

	<TR>
	<TD Align=right>
	Street Address:
	</TD>
	<TD Align=left>
	<%= a.text_field :street_address %>
	</TD>
	</TR>

	<TR>
	<TD Align=right>
	City:
	</TD>
	<TD Align=left>
	<%= a.text_field :city %>
	</TD>
	</TR>

	<TR>
	<TD Align=right>
	State:
	</TD>
	<TD Align=left>
	<%= a.text_field :state %>
	</TD>
	</TR>

	<TR>
	<TD Align=right>
	Zip Code:
	</TD>
	<TD Align=left>
	<%= a.text_field :zip %>
	</TD>
	</TR>

	<TR>
	<TD Align=right>
	Phone:
	</TD>
	<TD Align=left>
	<%= a.text_field :phone %>
	</TD>
	</TR>

	<TR>
	<TD Align=right>
	Fax:
	</TD>
	<TD Align=left>
	<%= a.text_field :fax %>
	</TD>
	</TR>

	<TR>
	<TD Align=right>
	Comments (optional):
	</TD>
	<TD Align=left>
	<%= a.text_area :applicant_comments, :rows => 4, :columns => 60 %>
	</TD>
	</TR>


	<TR>
	<TD colspan=2 align=center>
	<%= submit_tag "  *** UPDATE RECORD ***   " %>
	</TD>
	</TR>
</TABLE>
<% end %>
<BR>
<Font Size=2><%= link_to "Deny This Installer Application", { :controller => "manage", :action => "deny_installer_application", :id => @installer_application.id }, :confirm => "Are you sure you want to deny this installer application?"%></Font>
<BR><BR>
<%= link_to "Main Menu", :controller => "manage", :action => "index" %><BR>
<%#= Time.now.strftime("%D %I:%M:%S %p")%>
<%= Time.now.strftime("%m/%d/%Y")%>&nbsp;&nbsp;<%= Time.now.strftime("%I:%M%p")%>
</center>