<center>
<B><Font Size=4>Bid History</Font></B>
<TABLE border=1 cellpadding=2>
<TR>
<TD Align=Center>
<U>Status</U>
</TD>
<TD Align=Center>
<U>Project</U>
</TD>
<TD Align=Center>
<U>Amount</U>
</TD>
<TD Align=Center>
<U>Date/Time</U>
</TD>

<BR><BR>
<% @bids.each do |x| %>
	<TR>
	<TD Align=left>
	<%= x.borrower.status %>
	</TD>
	<TD Align=left>
	<%= link_to (x.borrower.headline, :controller => "borrower", :action => "show", :id => x.borrower_id) %>
	</TD>
	<TD Align=right>
	<%= x.amount %>
	</TD>
	<TD>
	<%= x. created_at.strftime("%m/%d/%Y %I:%M%p") %>
	</TD>
	</TR>
<% end %>

</TABLE>
<BR><BR>
<%= link_to ("Main Menu", :controller => "lender", :action => "index") %><BR>
<%= Time.now.strftime("%m/%d/%Y")%>&nbsp;&nbsp;<%= Time.now.strftime("%I:%M%p")%>
</center>