  <body>
    <div class="container">
      <p></p>
      <div class="row round-corners backdrop">
	<div class="heading-wrapper">

	  <div class="logo threecol">
	    <%= link_to_unless_current image_tag("/images/logo.jpg"),'/public' %>
	  </div>
	  <div class="ninecol header-right last">

	    <section>
	      <p id="indent-right">
		For the latest updates, sign up for our newsletter:
	      </p>
		  <% form_tag({:controller => :email, :action => :subscribe, :id => 2}) do %>
		<p>
		  <%= label_tag 'email', "Email: " %><%= text_field :email_subscriber, :email, :size => 20 %>&nbsp;&nbsp;<%= label_tag 'zipcode', "Zip Code: " %> <%= text_field :email_subscriber, :zip_code, :size => 3, :maxlength => 5 %>&nbsp;<span class="submit">
          <%= hidden_field_tag("email_subscriber[email_list_id]", 2) %>
		  <%= submit_tag(value='submit', {:class => "submit round-corners"}) %></span>
		</p>
		<%= flash[:notice] %>
		  <% end %>
	    </section>
	    <header class="row">
	      <div class="login-nav">
		<nav>
		  <ul>
		    <% if @current_user %>
          <li><%= link_to "Home", :controller => "main", :action => "index" %></li>

        <%else%>
          <li><%= link_to "Home", :controller => "public", :action => "index" %></li>
        <%end%>
		    <li><%= link_to "About", :controller => "public", :action => "about" %></li>
		    <li><%= link_to "Contact Us", :controller => "public", :action => "contact" %></li>
		    <li><%= link_to "How Its Works", :controller => "public", :action => "how_its_work" %></li>
		  <% if @current_user %>
        <li>
		      Logged in as:
		      <%= @current_user.first_name%>&nbsp;<%= @current_user.last_name%> |
		      <em><%= link_to "(Logout)", :controller => 'account', :action => 'logout' %></em>
		    </li>
		  <% else %>
		    <li><%= link_to "Sign Up", :controller => "account", :action => "type" %></li>
		    <li>
		      <%= link_to 'Login', :controller => 'account', :action => 'login' %>
		    </li>
		  <% end %>

		  </ul>
		  <%# render "layouts/login_topper" %>
		</nav>
	      </div>
	    </header>
	  </div>

	</div>
	<div class="container main">
	  <%= yield %>
	</div>


      </div>
      <p></p>
      <footer>
	<section class="row lower">
	  <nav>
	    <ol>
	      <li><%= link_to "Home", :controller => "public", :action => "index" %></li>
	      <li><%= link_to "About", :controller => "public", :action => "about" %></li>
	      <li><%= link_to "Contact Us", :controller => "public", :action => "contact" %></li>
	      <li><%= link_to "Investors", :controller => "public", :action => "lenders" %></li>
	      <li><%= link_to "Property Owners", :controller => "public", :action => "borrowers" %></li>
	      <li><%= link_to "Installers", :controller => "public", :action => "installers" %></li>
	      <li><%= link_to "Benefactor", :controller => "public", :action => "benefactor" %></li>
	      <li><%= link_to "Non Profit", :controller => "public", :action => "nonprofit" %></li>
	      <li><%= link_to "Use Case", :controller => "public", :action => "use_case" %></li>
	      <li><%= link_to "Privacy Policy", '/' %></li>
	      <li><%= link_to "Terms of Service", '/' %></li>
	      <li><%= link_to "FAQ", :controller => "public", :action => "faq" %></li>
	    </ol>
	  </nav>
	  <nav>
	    <ol>
	      <li><%= link_to image_tag("/images/facebook.png"), 'https://www.facebook.com/pages/Collectivesun/200809539975581' %></li>
	      <li><%= link_to image_tag("/images/twitter.png"), 'https://twitter.com/#!/collectivesun' %></li>
	      <li><%= link_to image_tag("/images/linkedin.png"), 'http://www.linkedin.com/company/collectivesun-llc' %></li>
	      <li><%= link_to image_tag("/images/youtube.png"), 'http://www.youtube.com/user/CollectiveSun' %></li>
	    </ol>
	  </nav>
	  <p><small>&copy; <%= Date.today.year %> CollectiveSun</small></p>
	</section>
      </footer>

    </div>
  </body>

